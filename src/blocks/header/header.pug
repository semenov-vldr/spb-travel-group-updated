    .header__underlay
    .header__container.container
        a.header__logo(href="index.html")
            include ../../img/icons/logo.svg

        nav.header__nav.header-nav
            ul.header-nav__list

                li.header-nav__item.header-nav__item--subnav
                    a.header-nav__link.header-nav__link--subnav Экскурсии

                    // Подменю 1
                    ul.header__subnav.header-subnav
                        li.header-subnav__button-back

                        +header-subnav__item("##", "По дворам и парадным")
                        +header-subnav__item("##", "Ночные и вечерние")
                        +header-subnav__item("##", "Индивидуальные")
                        +header-subnav__item("##", "Под развод мостов")
                        +header-subnav__item("##", "Для школьников")
                        +header-subnav__item("##", "По пригородам")
                        +header-subnav__item("##", "Салют с крыши")
                        +header-subnav__item("##", "Свидание на крыше")
                        +header-subnav__item("##", "Авторские")
                        +header-subnav__item("##", "Обзорные")
                        +header-subnav__item("##", "Водные")

                li.header-nav__item.header-nav__item--subnav.second-subnav
                    a.header-nav__link.header-nav__link--subnav Туры

                    // Подменю 2
                    ul.header__subnav.header-subnav
                        li.header-subnav__button-back

                        li.header-subnav__item
                            a.header-subnav__link(href="##") Индивидуальные
                        li.header-subnav__item
